<table class="shadow table table-bordered">
  <thead>
    <th colspan="7" id="header">
      <h1>Current Listings</h1>
      <div id="search-bar">
        <%= search_form_for @q do |f| %>
          <%= f.search_field :name_or_location_cont, class:"form-control mr-sm-2"%>
          <%= f.submit class:"btn btn-warning my-2 my-sm-0", style:"margin-left: 1em"%>
        <% end %>
      </div>
    </th>
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Will split</th>
      <th colspan ="3">Wont split</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.will_split %></td>
        <td><%= restaurant.wont_split %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
